@inject NavigationManager NavigationManager



<div class="col-lg-4">
    <div class="card border-rounded" style="width: 250px; border-radius: 15px;">
        <div class="card-body">
            <center class="m-t-30">
                <div class="profile-img">
                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="img-circle" width="150" style="width: 150px; height: 150px;object-fit: cover; border-radius: 50%;">
                </div>
                <h4 class="card-title m-t-10">@User.NAME</h4>
                <h6 class="card-subtitle">@User.POSITION</h6>
            </center>
        </div>
        <div>
            <hr>
        </div>
        <div class="card-body">
            <small class="text-muted">Ext</small>
            <h6>@User.TEL</h6>
            <small class="text-muted p-t-30 db">Departamento</small>
            <h6>@User.DEPT</h6>
        </div>

        <div style="text-align:right" class="card-body">
            <button class="btn btn-outline-danger bi bi-trash" @onclick="@(async() => await DeleteUser.InvokeAsync(User))" />
        </div>



        <button class="btn btn-info" @onclick="UserDetails">
            Ver
        </button>




    </div>

</div>



@code {
    [Parameter, EditorRequired]
    public User User
    { get; set; } = default!;


    [Parameter, EditorRequired]
    public EventCallback<User>
    DeleteUser
    { get; set; }
    


    protected void UserDetails()
    {

        NavigationManager.NavigateTo("/users/details/" + User.ID_USER);

    }


}